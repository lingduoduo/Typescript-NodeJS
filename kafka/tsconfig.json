{
  "compilerOptions": {
    /* File Layout */
    "rootDir": ".",
    "outDir": "dist",

    /* Environment Settings (Node + ESM) */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node"],

    /* Interop */
    "esModuleInterop": true,

    /* Outputs */
    "sourceMap": true,
    "declaration": false,

    /* Typechecking */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Module hygiene */
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",

    /* Performance */
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
